<%= form_tag(verify_abstracts_url, {:class => "form-inline"}) do %>
    <%= email_field_tag :email, nil, {:placeholder => :email, :autofocus => true} %> 
    <%= text_field_tag :order_id, nil, {:placeholder => 'Order ID (e.g. 5146078058-132147645)'} %>
    <%= submit_tag "Submit Abstract", :class => "btn" %>
<% end -%>
